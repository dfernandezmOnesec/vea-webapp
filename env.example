# Configuración de Django
SECRET_KEY=your-secret-key-here
DEBUG=True

# Configuración de base de datos (desarrollo local)
DATABASE_URL=sqlite:///db.sqlite3

# Configuración de Azure Blob Storage (opcional para desarrollo)
BLOB_ACCOUNT_NAME=your-azure-storage-account
BLOB_ACCOUNT_KEY=your-azure-storage-key
BLOB_CONTAINER_NAME=your-container-name

# Configuración de Azure (producción)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-azure-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-azure-storage-key

# Configuración de PostgreSQL (producción)
AZURE_POSTGRESQL_NAME=your-database-name
AZURE_POSTGRESQL_USERNAME=your-database-user
AZURE_POSTGRESQL_PASSWORD=your-database-password
AZURE_POSTGRESQL_HOST=your-database-host

# Configuración de Redis (opcional)
REDIS_USERNAME=your-redis-username
REDIS_PASSWORD=your-redis-password
REDIS_HOST=your-redis-host
REDIS_PORT=your-redis-port

# Configuración de Azure Function App
FUNCTION_APP_URL=https://your-function-app.azurewebsites.net/api/FunctionName
FUNCTION_APP_KEY=your-function-app-key

# Configuración de Azure App Service
WEBSITE_HOSTNAME=your-app-service-hostname 