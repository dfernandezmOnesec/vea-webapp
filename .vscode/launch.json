{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "127.0.0.1:8000"],
            "django": true,
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Migrate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["migrate"],
            "django": true,
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Create Superuser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["createsuperuser"],
            "django": true,
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}
